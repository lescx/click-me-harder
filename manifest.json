{
  "manifest_version": 3,
  "name": "Click Me Harder",
  "description": "An auto clicker that doesn't suck.",
  "version": "0.2.0",
  "author": "git@les.cx",
  "homepage_url": "https://www.les.cx",
  "icons": {
    "16":  "icons/icon16.png",
    "32":  "icons/icon32.png",
    "48":  "icons/icon48.png",
    "64":  "icons/icon64.png",
    "96":  "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "commands": {
    "follow_mouse_mode": {
      "description": "Toggle follow mouse mode",
      "suggested_key": {
        "default": "Alt+N"
      }
    },
    "fixed_location_mode": {
      "description": "Toggle specific location mode",
      "suggested_key": {
        "default": "Alt+M"
      }
    }
  }
}
