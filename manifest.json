{
  "manifest_version": 3,
  "name": "Click Me Harder",
  "description": "An auto clicker that doesn't suck.",
  "version": "0.1.3",
  "author": "git@les.cx",
  "homepage_url": "https://www.les.cx",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "commands": {
    "toggle-auto-clicker": {
      "description": "Toggle auto clicker",
      "suggested_key": {
        "default": "Alt+Shift+K"
      }
    }
  }
}
