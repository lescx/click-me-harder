{
  "manifest_version": 3,
  "name": "Autoclicker",
  "description": "An auto clicker that doesn't suck.",
  "version": "0.1.3",
  "author": "git@les.cx",
  "homepage_url": "https://www.les.cx",
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "commands": {
    "toggle-auto-clicker": {
      "description": "Toggle auto clicker",
      "suggested_key": {
        "default": "Alt+Shift+K"
      }
    }
  }
}
